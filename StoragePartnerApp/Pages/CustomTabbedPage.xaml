<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="StoragePartnerApp.Pages.CustomTabbedPage"
            xmlns:local="clr-namespace:StoragePartnerApp.Pages"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            SelectedTabColor="#1d94ab"
            UnselectedTabColor="#78909c">

    <local:HomePage Title="Home"
                    IconImageSource="home_icon.svg" />
    <local:ReservedPage Title="Reserved"
                        IconImageSource="bookmark_icon.svg" />
    <local:MyStorage Title="My Storage"
                     IconImageSource="storage.png" />
    <local:SettingsPage Title="More"
                        IconImageSource="settings_icon.svg" />
</TabbedPage>